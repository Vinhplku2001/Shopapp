<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
   <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

       <TextView
           android:id="@+id/creat_accou"
           android:layout_width="184dp"
           android:layout_height="30dp"
           android:layout_alignParentLeft="true"
           android:layout_alignParentTop="true"
           android:layout_marginLeft="115dp"
           android:layout_marginTop="117dp"
           android:gravity="center_horizontal|top"
           android:text="creat_accout"
           android:textColor="@color/black"
           android:textSize="25sp" />

       <EditText
           android:id="@+id/rectangle_1"
           android:layout_width="354dp"
           android:layout_height="66dp"
           android:layout_alignParentLeft="true"
           android:layout_alignParentTop="true"
           android:layout_marginLeft="30dp"
           android:layout_marginTop="237dp"
           android:background="@drawable/mybutton"
           android:hint="Email"
           android:paddingLeft="30sp" />

       <EditText
           android:id="@+id/rectangle_2"
           android:layout_width="354dp"
           android:layout_height="66dp"
           android:layout_alignParentLeft="true"
           android:layout_alignParentTop="true"
           android:layout_marginLeft="30dp"
           android:layout_marginTop="339dp"
           android:background="@drawable/mybutton"
           android:hint="Password"
           android:inputType="textPassword"
           android:paddingLeft="30sp" />

       <EditText
           android:id="@+id/rectangle_3"
           android:layout_width="354dp"
           android:layout_height="66dp"
           android:layout_alignParentLeft="true"
           android:layout_alignParentTop="true"
           android:layout_marginLeft="30dp"
           android:layout_marginTop="441dp"
           android:background="@drawable/mybutton"
           android:hint="Konfirmation Password"
           android:inputType="textPassword"
           android:paddingLeft="30sp" />

       <androidx.appcompat.widget.AppCompatButton
           android:id="@+id/finish"
           android:layout_width="200dp"
           android:layout_height="40dp"
           android:layout_alignParentLeft="true"
           android:layout_alignParentTop="true"
           android:layout_marginLeft="102dp"
           android:layout_marginTop="578dp"
           android:background="@drawable/yellowbutton"
           android:gravity="center_horizontal|top"
           android:text="EXIT"
           android:textColor="@color/white"
           android:textSize="25sp" />

       <androidx.appcompat.widget.AppCompatButton
           android:id="@+id/sign_up"
           android:layout_width="354dp"
           android:layout_height="66dp"
           android:layout_alignParentLeft="true"
           android:layout_alignParentTop="true"
           android:layout_marginLeft="25dp"
           android:layout_marginTop="652dp"
           android:background="@drawable/yellowbutton"
           android:gravity="center_horizontal|top"
           android:paddingTop="15dp"
           android:paddingRight="10dp"
           android:text="sign_up"
           android:textColor="@color/white"
           android:textSize="25sp" />

       <androidx.appcompat.widget.AppCompatButton
           android:id="@+id/sign_up_men"
           android:layout_width="200dp"
           android:layout_height="40dp"
           android:layout_alignParentLeft="true"
           android:layout_marginLeft="137dp"
           android:layout_alignParentTop="true"
           android:layout_marginTop="795dp"
           android:text="sign up menu"
           android:gravity="top"
           android:textSize="20sp"
           android:textColor="#ff0"
           android:background="@drawable/nonbutton"/>


    </RelativeLayout>
</ScrollView>